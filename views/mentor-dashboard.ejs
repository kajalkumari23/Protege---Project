<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0, user-scalable=no"
    />
    <title>Dashboard - Mentor</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css"
      integrity="sha512-MV7K8+y+gLIBoVD59lQIYicR65iaqukzvf/nwasF0nqhPay5w/9lJmVM2hMDcnK1OnMGCdVK+iQrJ7lzPJQd1w=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&family=Roboto:wght@300&display=swap"
      rel="stylesheet"
    />
    <link rel="shortcut icon" href="../images/logo1.png" type="image/x-icon" />
    <link rel="stylesheet" href="../css/style.css" />
  </head>

  <body>
    <section class="feeds-page">
      <nav class="feeds-nav dark-mode-1">
        <div class="logo-nav">
            <div class="logo-img">
                <img src="../images/logo.jpg" alt="">
            </div>
        </div>
        <div class="other-nav">
            <div class="icons">
                <a href="#" class="active"><i class="fas fa-home"></i></a>
                <a href="#"><i class="fas fa-envelope"></i></a>
              </div>
              <div class="user">
                <!-- <div class="user-img-wrapper">
                  <img src="../images/user1.jpg" alt="" />
                </div> -->
                <b><a href="/profile/<%= m.m_username %>" class="user-link light-text"><%= m.m_name %></a></b>
              </div>
        </div>
      </nav>
      <div class="container-feed">
        <div class="feeds-content dark-mode-2">
          <div class="feeds-header dark-mode-1">
            <div class="header-top border">
              <h4 class="light-text">Home</h4>
            </div>
            <div class="header-post dark-mode-1 border">
              <!-- <div class="header-img-wrapper">
                <img src="../images/user1.jpg" alt="" />
              </div> -->
              <input
                type="text"
                placeholder="Share a Opportunity"
                class="dark-mode-2 light-text border"
              />
              <i class="fas fa-image"></i>
            </div>
          </div>

          <div class="posts dark-mode-1">
            <% for(post of posts) { %>
            <div class="post border">
              <!-- <div class="user-avatar">
                <img src="../images/user2.jpg" alt="" />
              </div> -->
              <div class="post-content">
                <div class="post-user-info light-text">
                  <h4><%= post.mentor %></h4>
                  <span><%= post.mentor_username %></span>
                </div>
                <p class="post-text light-text">
                  <%= post.p_detail %>
                </p>
                <!-- <div class="post-img">
                  <img src="../images/download (1).png" alt="post" />
                </div> -->
                <div class="post-icons">
                  <i class="fas fa-comment"></i>
                  <i class="fas fa-retweet"></i>
                  <i class="fas fa-heart"></i>
                  <i class="fas fa-share-alt"></i>
                </div>
              </div>
            </div>
            <% } %>
          </div>
        </div>
      <button type="button" class="post-btn">
        Post
      </button>

      <!-- Post Modal -->
      <div class="modal-wrapper">
        <div class="modal dark-mode-1">
          <form action="/mentor-dashboard" method="POST">
            <div class="modal-header border">
              <i class="fas fa-times"></i>
              <button>Post</button>
            </div>
            <div class="modal-body">
              <!-- <div class="modal-img">
                <img src="../images/user1.jpg" alt="" />
              </div> -->
              <input
                name="detail"
                type="text"
                placeholder="What's happening?"
                class="modal-input dark-mode-2 light-text border"
              />
            </div>
            <!-- <i class="fas fa-smile"></i> -->
          </form>
          <div class="modal-footer">
            <!-- <div class="modal-icons">
              <i class="fas fa-image"></i>
              <i class="fas fa-camera"></i>
              <i class="fas fa-chart-bar"></i>
              <span>+</span>
            </div> -->
          </div>
        </div>
      </div>
    </section>

    <!-- End of News Feed Page -->

    <script src="./assets/js/script.js"></script>
    <script src="script.js"></script>
  </body>
</html>